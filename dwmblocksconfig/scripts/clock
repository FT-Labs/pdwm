#!/bin/sh

clock=$(date '+%I')

case "$clock" in
	"00") icon="ğŸ•›" ;;
	"01") icon="ğŸ•" ;;
	"02") icon="ğŸ•‘" ;;
	"03") icon="ğŸ•’" ;;
	"04") icon="ğŸ•“" ;;
	"05") icon="ğŸ•”" ;;
	"06") icon="ğŸ••" ;;
	"07") icon="ğŸ•–" ;;
	"08") icon="ğŸ•—" ;;
	"09") icon="ğŸ•˜" ;;
	"10") icon="ğŸ•™" ;;
	"11") icon="ğŸ•š" ;;
	"12") icon="ğŸ•›" ;;
esac

today=$(date '+%d/%m/%Y')

case $BLOCK_BUTTON in
	1) notify-send "This Month" "$(cal --color=always | sed "s/..7m/<b><span color=\"red\">/;s/..27m/<\/span><\/b>/")" && notify-send "Appointments" "$(calcurse -d3)" ;;
	2) setsid -f "$TERMINAL" -e calcurse ;;
	3) notify-send TODAY $today ;;
	6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

date "+%H:%M $icon"
